<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
              android:orientation="vertical"
             tools:context="com.sunsunsoft.shutaro.ugui.FragmentMenu">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <Button
                android:text="Home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonHome"/>
            <Button
                android:text="Button"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonButton"/>
            <Button
                android:text="Textview"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonTextview"/>
            <Button
                android:text="image view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonImageView"/>
            <Button
                android:text="MenuBar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonMenuBar"/>
            <Button
                android:text="LogWindow"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonLog"/>
            <Button
                android:text="Window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonWindow"/>
            <Button
                android:text="Dialog"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonDialog"/>
            <Button
                android:text="Touch"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonTouch"/>
            <Button
                android:text="scroll window"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonScrollWin"/>
            <Button
                android:text="list view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/buttonListView"/>

        </LinearLayout>
    </ScrollView>

</LinearLayout>
